<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Template que SOLO agrega funcionalidad sin modificar botones existentes -->
    
    <!-- Agregar información del PDF adjunto en el portal (antes del contenido) -->
    <template id="portal_sale_order_pdf_info" name="Portal Sale Order PDF Info" inherit_id="sale.sale_order_portal_content" priority="20">
        <xpath expr="//div[@id='introduction']" position="before">
            <t t-if="sale_order.portal_has_pdf_attachment">
                <div class="alert alert-info portal-pdf-info mb-3">
                    <div class="d-flex align-items-center">
                        <i class="fa fa-file-pdf-o fa-2x text-danger me-3"></i>
                        <div class="flex-grow-1">
                            <h6 class="mb-1">Documento PDF Disponible</h6>
                            <small>
                                <strong t-esc="sale_order.portal_pdf_attachment_name"/>
                                - Este documento reemplaza la cotización estándar
                            </small>
                        </div>
                        <div class="ms-3">
                            <a t-att-href="sale_order.portal_pdf_attachment_url" 
                               class="btn btn-sm btn-outline-primary me-2" 
                               target="_blank">
                                <i class="fa fa-external-link"></i> Ver PDF
                            </a>
                            <a t-att-href="sale_order.portal_pdf_download_url" 
                               class="btn btn-sm btn-outline-success">
                                <i class="fa fa-download"></i> Descargar
                            </a>
                        </div>
                    </div>
                </div>
            </t>
        </xpath>
    </template>

    <!-- Ocultar contenido original cuando hay PDF adjunto -->
    <template id="portal_sale_order_hide_original_content" name="Hide Original Content When PDF" inherit_id="sale.sale_order_portal_content" priority="21">
        <!-- Ocultar la sección de informaciones cuando hay PDF -->
        <xpath expr="//div[@id='informations']" position="attributes">
            <attribute name="t-if">not sale_order.portal_has_pdf_attachment</attribute>
        </xpath>
        
        <!-- Ocultar la sección de detalles/productos cuando hay PDF -->
        <xpath expr="//section[@id='details']" position="attributes">
            <attribute name="t-if">not sale_order.portal_has_pdf_attachment</attribute>
        </xpath>
        
        <!-- Ocultar la sección de firma cuando hay PDF -->
        <xpath expr="//section[@t-if='sale_order.signature']" position="attributes">
            <attribute name="t-if">sale_order.signature and not sale_order.portal_has_pdf_attachment</attribute>
        </xpath>
        
        <!-- Ocultar términos y condiciones cuando hay PDF -->
        <xpath expr="//section[@t-if='not is_html_empty(sale_order.note)']" position="attributes">
            <attribute name="t-if">not is_html_empty(sale_order.note) and not sale_order.portal_has_pdf_attachment</attribute>
        </xpath>
        
        <!-- Ocultar términos de pago cuando hay PDF -->
        <xpath expr="//section[@t-if='sale_order.payment_term_id']" position="attributes">
            <attribute name="t-if">sale_order.payment_term_id and not sale_order.portal_has_pdf_attachment</attribute>
        </xpath>
    </template>

    <!-- Ocultar botones usando CSS cuando hay PDF adjunto -->
    <template id="portal_sale_order_hide_buttons" inherit_id="sale.sale_order_portal_content" priority="21">
        <!-- Agregar CSS para ocultar botones específicos -->
        <xpath expr="//div[@id='introduction']" position="before">
            <style t-if="sale_order.portal_has_pdf_attachment">
                /* Ocultar botones de descarga e impresión cuando hay PDF adjunto */
                .o_download_btn, .o_print_btn,
                a[class*="download"], a[class*="print"],
                .btn-secondary:has(.fa-download), .btn-secondary:has(.fa-print) {
                    display: none !important;
                }
                
                /* Selector más específico por contenido de texto */
                a.btn[href*="report_type=pdf"] {
                    display: none !important;
                }
            </style>
            
            <!-- JavaScript para ocultar dinámicamente la barra del PDF -->
            <script t-if="sale_order.portal_has_pdf_attachment">
                document.addEventListener('DOMContentLoaded', function() {
                    // Función para ocultar la barra superior del PDF
                    function hidePdfToolbar() {
                        var iframe = document.querySelector('.portal-pdf-iframe');
                        if (iframe) {
                            // Agregar parámetros adicionales si no están
                            var src = iframe.src;
                            if (src && !src.includes('#toolbar=0')) {
                                iframe.src = src + '#toolbar=0&navpanes=0&statusbar=0&messages=0&scrollbar=0';
                            }
                            
                            // Aplicar estilos adicionales
                            iframe.style.marginTop = '-50px';
                            iframe.style.height = '850px';
                        }
                        
                        // Crear overlay si no existe
                        var container = document.querySelector('.pdf-container');
                        if (container && !container.querySelector('.pdf-overlay')) {
                            var overlay = document.createElement('div');
                            overlay.className = 'pdf-overlay';
                            overlay.style.cssText = `
                                position: absolute;
                                top: 0;
                                left: 0;
                                right: 0;
                                height: 50px;
                                background: white;
                                z-index: 1000;
                                pointer-events: none;
                                border-bottom: 1px solid #dee2e6;
                            `;
                            container.appendChild(overlay);
                        }
                    }
                    
                    // Ejecutar inmediatamente y después de que cargue el iframe
                    hidePdfToolbar();
                    setTimeout(hidePdfToolbar, 1000);
                    setTimeout(hidePdfToolbar, 3000);
                });
            </script>
        </xpath>
    </template>

    <!-- Agregar vista previa del PDF después del contenido de la cotización -->
    <template id="portal_sale_order_pdf_preview" name="Portal Sale Order PDF Preview" inherit_id="sale.sale_order_portal_content" priority="22">
        <!-- Usar el div principal como punto de anclaje para el PDF preview -->
        <xpath expr="//div[contains(@class,'card-body') or not(@class)]" position="inside">
            <t t-if="sale_order.portal_has_pdf_attachment">
                <section class="mt-5">
                    <div class="card">
                        <div class="card-header">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="card-title mb-0">
                                    <i class="fa fa-file-pdf-o text-danger"></i>
                                    Vista Previa del Documento PDF
                                </h5>
                                <div class="btn-group">
                                    <a t-att-href="sale_order.portal_pdf_attachment_url" 
                                       class="btn btn-sm btn-outline-primary" 
                                       target="_blank">
                                        <i class="fa fa-external-link"></i> Abrir
                                    </a>
                                    <a t-att-href="sale_order.portal_pdf_download_url" 
                                       class="btn btn-sm btn-outline-success">
                                        <i class="fa fa-download"></i> Descargar
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            <div class="pdf-container">
                                <!-- iframe con múltiples parámetros para ocultar toolbar -->
                                <iframe t-att-src="sale_order.portal_pdf_attachment_url + '#toolbar=0&amp;navpanes=0&amp;scrollbar=0&amp;view=FitH&amp;pagemode=none'"
                                        class="portal-pdf-iframe w-100"
                                        style="height: 800px; border: none; margin-top: -40px;"
                                        frameborder="0" 
                                        scrolling="no">
                                </iframe>
                                
                                <!-- Overlay para ocultar la parte superior -->
                                <div class="pdf-overlay"></div>
                                
                                <!-- fallback -->
                                <noscript>
                                    <div class="p-4 text-center">
                                        <p class="mb-3">Tu navegador no soporta la vista previa de PDF.</p>
                                        <a t-att-href="sale_order.portal_pdf_download_url" 
                                           class="btn btn-primary">
                                            <i class="fa fa-download"></i> Descargar PDF
                                        </a>
                                    </div>
                                </noscript>
                            </div>
                        </div>
                    </div>
                </section>
            </t>
        </xpath>
    </template>

    <!-- CSS personalizado incluido inline para evitar dependencias -->
    <template id="portal_sale_order_pdf_styles" name="Portal Sale Order PDF Styles" inherit_id="sale.sale_order_portal_content" priority="23">
        <xpath expr="//div[@id='introduction']" position="before">
            <style>
                .portal-pdf-info {
                    border-left: 4px solid #dc3545;
                    background-color: #f8f9fa;
                    border-radius: 0.375rem;
                }
                
                .portal-pdf-iframe {
                    min-height: 600px;
                }
                
                @media (max-width: 768px) {
                    .portal-pdf-iframe {
                        height: 500px !important;
                    }
                }
                
                .pdf-container {
                    position: relative;
                    overflow: hidden;
                }
                
                /* Overlay para ocultar la barra superior del PDF */
                .pdf-overlay {
                    position: absolute;
                    top: 0;
                    left: 0;
                    right: 0;
                    height: 40px;
                    background: white;
                    z-index: 10;
                    pointer-events: none;
                }
                
                /* Ocultar la barra de herramientas del PDF */
                .portal-pdf-iframe {
                    border: none !important;
                    position: relative;
                }
                
                /* CSS adicional para ocultar toolbars de PDF viewers */
                iframe[src*=".pdf"] {
                    -webkit-appearance: none;
                }
                
                /* Ocultar scrollbars del iframe */
                .pdf-container iframe::-webkit-scrollbar {
                    display: none;
                }
                
                .pdf-container {
                    -ms-overflow-style: none;
                    scrollbar-width: none;
                }
                
                @media print {
                    .portal-pdf-iframe {
                        display: none;
                    }
                }
            </style>
        </xpath>
    </template>

</odoo>