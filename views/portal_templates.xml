<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Template que SOLO agrega funcionalidad sin modificar botones existentes -->
    
    <!-- Agregar información del PDF adjunto en el portal (antes del contenido) -->
    <template id="portal_sale_order_pdf_info" name="Portal Sale Order PDF Info" inherit_id="sale.sale_order_portal_content" priority="20">
        <xpath expr="//div[@id='introduction']" position="before">
            <t t-if="sale_order.portal_has_pdf_attachment">
                <div class="alert alert-info portal-pdf-info mb-3">
                    <div class="d-flex align-items-center">
                        <i class="fa fa-file-pdf-o fa-2x text-danger me-3"></i>
                        <div class="flex-grow-1">
                            <h6 class="mb-1">Documento PDF Disponible</h6>
                            <small>
                                <strong t-esc="sale_order.portal_pdf_attachment_name"/>
                                - Este documento reemplaza la cotización estándar
                            </small>
                        </div>
                        <div class="ms-3">
                            <a t-att-href="sale_order.portal_pdf_attachment_url" 
                               class="btn btn-sm btn-outline-primary me-2" 
                               target="_blank">
                                <i class="fa fa-external-link"></i> Ver PDF
                            </a>
                            <a t-att-href="sale_order.portal_pdf_download_url" 
                               class="btn btn-sm btn-outline-success">
                                <i class="fa fa-download"></i> Descargar
                            </a>
                        </div>
                    </div>
                </div>
            </t>
        </xpath>
    </template>

    <!-- Agregar vista previa del PDF después del contenido de la cotización -->
    <template id="portal_sale_order_pdf_preview" name="Portal Sale Order PDF Preview" inherit_id="sale.sale_order_portal_content" priority="21">
        <xpath expr="//section[@t-if='sale_order.payment_term_id']" position="after">
            <t t-if="sale_order.portal_has_pdf_attachment">
                <section class="mt-5">
                    <div class="card">
                        <div class="card-header">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="card-title mb-0">
                                    <i class="fa fa-file-pdf-o text-danger"></i>
                                    Vista Previa del Documento PDF
                                </h5>
                                <div class="btn-group">
                                    <a t-att-href="sale_order.portal_pdf_attachment_url" 
                                       class="btn btn-sm btn-outline-primary" 
                                       target="_blank">
                                        <i class="fa fa-external-link"></i> Abrir
                                    </a>
                                    <a t-att-href="sale_order.portal_pdf_download_url" 
                                       class="btn btn-sm btn-outline-success">
                                        <i class="fa fa-download"></i> Descargar
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            <div class="pdf-container">
                                <iframe t-att-src="sale_order.portal_pdf_attachment_url"
                                        class="portal-pdf-iframe w-100"
                                        style="height: 800px; border: none;"
                                        frameborder="0">
                                    <div class="p-4 text-center">
                                        <p class="mb-3">Tu navegador no soporta la vista previa de PDF.</p>
                                        <a t-att-href="sale_order.portal_pdf_download_url" 
                                           class="btn btn-primary">
                                            <i class="fa fa-download"></i> Descargar PDF
                                        </a>
                                    </div>
                                </iframe>
                            </div>
                        </div>
                    </div>
                </section>
            </t>
        </xpath>
    </template>

    <!-- CSS personalizado incluido inline para evitar dependencias -->
    <template id="portal_sale_order_pdf_styles" name="Portal Sale Order PDF Styles" inherit_id="sale.sale_order_portal_content" priority="22">
        <xpath expr="//div[@id='introduction']" position="before">
            <style>
                .portal-pdf-info {
                    border-left: 4px solid #dc3545;
                    background-color: #f8f9fa;
                    border-radius: 0.375rem;
                }
                
                .portal-pdf-iframe {
                    min-height: 600px;
                }
                
                @media (max-width: 768px) {
                    .portal-pdf-iframe {
                        height: 500px !important;
                    }
                }
                
                .pdf-container {
                    position: relative;
                    overflow: hidden;
                }
            </style>
        </xpath>
    </template>

</odoo>